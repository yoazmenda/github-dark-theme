{
    "manifest_version": 2,
    "name": "Chrome Extension TypeScript Starter",
    "description": "Chrome Extension, TypeScript, Visual Studio Code",
    "version": "1.0.41",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/vendor.js",
                "js/content_script.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/vendor.js",
            "js/background.js"
        ]
    },
    "permissions": [
        "storage",
        "*://*/*",
        "<all_urls>"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}